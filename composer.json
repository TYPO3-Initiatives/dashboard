{
  "name": "friendsoftypo3/dashboard",
  "type": "typo3-cms-extension",
  "description": "Dashboard for TYPO3.",
  "homepage": "https://typo3.org",
  "license": [
    "GPL-2.0-or-later"
  ],
  "authors": [
    {
      "name": "Richard Haeser",
      "role": "Developer"
    },
    {
      "name": "Simon Schmidt",
      "role": "Developer"
    },
    {
      "name": "Richard Vollebregt",
      "role": "Developer"
    },
    {
      "name": "Sanjay Chauhan",
      "role": "Developer"
    },
    {
      "name": "Irene Sacchi",
      "role": "UX"
    }
  ],
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true,
    "vendor-dir": ".build/vendor",
    "bin-dir": ".build/bin"
  },
  "require": {
    "typo3/cms-core": "^9.5 || 10.0.*@dev"
  },
  "replace": {
    "dashboard": "self.version",
    "typo3-ter/dashboard": "self.version"
  },
  "autoload": {
    "psr-4": {
      "FriendsOfTYPO3\\Dashboard\\": "Classes/"
    }
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^2.15",
    "typo3/testing-framework": "^4.9 || ^5.0"
  },
  "scripts": {
    "test:php:unit": [
      "phpunit -c build/phpunit.xml"
    ],
    "test": [
      "@test:php:unit"
    ],
    "cgl": [
      "php-cs-fixer fix -v --dry-run --using-cache false"
    ],
    "cgl-fix": [
      "php-cs-fixer fix -v --using-cache false"
    ]
  }
}
